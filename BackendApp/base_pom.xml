<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>com.minato.gaecicdtest</groupId>
    <artifactId>gaeCicdTest</artifactId>
    <version>1.0.0</version>
  </parent>
  <artifactId>BackendAppParent</artifactId>
  <packaging>pom</packaging>
  <properties>
	<start-class>com.minato.gaecicdtest.GaeCicdTestApplication</start-class>
	<appengine.cloud.tools.version>2.4.2</appengine.cloud.tools.version>
  </properties>
  <dependencies>
		<dependency>
			<groupId>com.minato.gaecicdtest</groupId>
			<artifactId>BackendCommonBase</artifactId>
			<version>1.0.0</version>
		</dependency>
		<dependency>
    		<groupId>com.minato.gaecicdtest</groupId>
        	<artifactId>Frontend</artifactId>
        	<version>1.0.0</version>
        	<type>zip</type>
     	</dependency>
	</dependencies>
	<build>
		<plugins>
			<plugin>
				<artifactId>maven-compiler-plugin</artifactId>
			</plugin>
			<plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>
                <version>2.2</version>
                <executions>
                	<execution>
                    	<id>unpack-directives</id>
                        <phase>prepare-package</phase>
                        <goals>
                        	<goal>unpack-dependencies</goal>
                        </goals>
                        <configuration>
                        	<includeGroupIds>com.minato.gaecicdtest</includeGroupIds>
                            <includeArtifactIds>Frontend</includeArtifactIds>
                            <outputDirectory>${basedir}/target/classes/static</outputDirectory>
                            <stripClassifier>true</stripClassifier>
                        </configuration>
                    </execution>
                 </executions>
             </plugin>
			<plugin>
                <groupId>org.springframework.boot</groupId>
                <artifactId>spring-boot-maven-plugin</artifactId>
            </plugin>
			<plugin>
				<groupId>com.google.cloud.tools</groupId>
				<artifactId>appengine-maven-plugin</artifactId>
                <version>${appengine.cloud.tools.version}</version>
                <configuration>
                    <projectId>${app-name}</projectId>
                    <version>${app-version}</version>
                    <artifact>./target/BackendApp-1.0.0.jar</artifact>
					<appEngineDirectory>./target/classes/</appEngineDirectory>
                </configuration>
            </plugin>
		</plugins>
		<resources>
            <resource>
                <directory>src/main/resources</directory>
                <includes>
                    <include>*.properties</include>
                </includes>
                <filtering>true</filtering>
            </resource>
            <resource>
                <directory>src/main/resources</directory>
                <targetPath>.</targetPath>
                <excludes>
                    <exclude>*.properties</exclude>
                </excludes>
            </resource>
			<resource>
                <directory>src/main/appengine</directory>
                <includes>
                    <include>*.yaml</include>
                </includes>
                <filtering>true</filtering>
            </resource>

        </resources>
	</build>
	<profiles>
		<profile>
			<id>local</id>
			<properties>
				<app-name>vb-eva-gen</app-name>
				<app-version>1-0-0</app-version>
				<env-suffix>DEV</env-suffix>
			</properties>
			<activation> 
            	<activeByDefault>true</activeByDefault>
        	</activation>
		</profile>
     </profiles>
</project>